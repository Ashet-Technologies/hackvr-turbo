validate: lint test

test:
    pytest --cov=hackvr 
    coverage xml

lint: lint-codestyle lint-types

lint-codestyle:
    ruff check

lint-types:
    ty check

fuzz:
    HACKVR_FUZZ_MAX_TIME=0 PYTHONPATH=src python tests/fuzzing/fuzz_common_stream.py

install:
    python -m pip install -r requirements.txt

package:
    python -m build
